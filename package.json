{
  "name": "pudeuko",
  "version": "2.0.0",
  "description": "Save internet things to check out later",
  "main": "build/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deseteral/pudeuko.git"
  },
  "author": "Deseteral <github.com/deseteral>",
  "license": "MIT",
  "scripts": {
    "start": "node build/main.js",
    "build": "tsc",
    "test": "npm run lint",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "@koa/router": "10.0.0",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "nanoid": "3.1.21",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@deseteral/eslint-config": "4.0.0",
    "@types/koa": "2.13.1",
    "@types/koa-bodyparser": "4.3.0",
    "@types/koa__router": "8.0.4",
    "@types/nanoid": "2.1.0",
    "@types/node": "14.14.34",
    "@types/node-fetch": "2.5.8",
    "eslint": "7.22.0",
    "typescript": "4.2.3"
  },
  "eslintConfig": {
    "extends": "@deseteral/eslint-config/typescript",
    "rules": {
      "max-len": [
        "error",
        120
      ],
      "@typescript-eslint/explicit-function-return-type": "error",
      "max-classes-per-file": "off"
    }
  }
}
